@model IEnumerable<SurfsUp.Models.Rent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Board)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Board.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BoardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BoardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BoardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
